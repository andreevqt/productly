mixin use(id, width, height, fill, stroke)
  svg(class!=attributes.class, width=width, height=height, fill=fill, stroke=stroke)
    use(xlink:href!=id)

mixin webp(src, fallback, alt)
  picture(class!=attributes.class)
    source(data-srcset=src type="image/webp")
    source(data-srcset=fallback, type=getImageType(fallback))
    img.lazy(data-src=fallback, alt=alt)